@model ICollection<Home>
@{
    ViewData["Title"] = "List";
}

<h2>List</h2>
<a class="btn btn-primary" asp-action="create" asp-controller="Home">Add a New Home</a>
@if (Model.Count == 0)
{
<div class="alert alert-secondary">
    You do not have any homes &#x1F62A . Let's add some now 👍 !
</div>
}
else
{
    <table class="table table-dark">
        <tr>
            <th>Address</th>
            <th>City</th>
            <th>State</th>
            <th>Image</th>
        </tr>
        @foreach (var h in Model)
        {
            <tr>
                <td>@h.Address</td>
                <td>@h.City</td>
                <td>@h.State</td>
                <td>
                    <img src="@h.ImageURL" alt="Home Image @h.Address" />
                </td>
            </tr>
        }
    </table>
}


